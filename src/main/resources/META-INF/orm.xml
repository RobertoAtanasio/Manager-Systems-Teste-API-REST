<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
	version="2.1">
	
	<named-native-query name="Usuario.listarPermissoes" result-set-mapping="listarPermissoesMapping">
		<query>
			select p.descricao as descricao from usuario u
			inner join usuario_permissao up on up.id_usuario = u.id
			inner join permissao p on p.id = up.id_permissao 
			where u.id = 2
	    </query>
	</named-native-query>
	
	<sql-result-set-mapping name="listarPermissoesMapping">
		<constructor-result target-class="com.managersystem.sisclinica.api.model.PermissoesUsuario">
			<column name="descricao" class="java.lang.String"/>
		</constructor-result>
	</sql-result-set-mapping>
	
</entity-mappings>